<body class="black-page">
  <div class="container">
    <div class="comments">
      <% @forum.comments.each do |comment| %>
        <% if comment.user == current_user %>
          <div class="comment comment-left">
            <small>
              <strong><%= comment.user.first_name %></strong>
              <i><%= comment.created_at.strftime("%a %b %e at %l:%M %p") %></i>
            </small>
            <p><%= comment.content %></p>
          </div>
        <% else %>
          <div class="comment comment-right">
            <small>
              <strong><%= comment.user.first_name %></strong>
              <i><%= comment.created_at.strftime("%a %b %e at %l:%M %p") %></i>
            </small>
            <p><%= comment.content %></p>
          </div>
        <% end %>
      <% end %>
    </div>

    <%= simple_form_for [@forum, @comment], html: { class: "d-flex" } do |f| %>
      <div class="d-flex comment-form-container">
        <%= f.input :content, label: false, placeholder: "Comment #{current_user.first_name}", class: "form-control" %>
        <%= f.submit "Send", class: "button ms-3" %>
      </div>
    <% end %>
  </div>
</body>
